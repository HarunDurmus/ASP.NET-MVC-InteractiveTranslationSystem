@model IEnumerable<Tercume.Entities.Translate>
@{
    ViewBag.Title = "TercumeIstekleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Translator.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Translator.Email)
                </th>

                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Translator.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Translator.Email)
                    </td>

                    <td width="150">
                        @Bootstrap.LinkButton("/Tercume/Details/" + item.Id, "info", "btn-xs", "Tercüme Metni", "search", string.Empty)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
