@using Tercume.Entities.Messages
@using Tercume.WebApp.ViewModels
@model ErrorViewModelTercuman
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_LayoutTercumanProfil.cshtml";
}


<div class="content-wrapper">
    <section class="content">
        <link href="~/Content/login-register.css" rel="stylesheet" />
        <section class="login-info">
            <div class="container">
                <div class="row main">
                    <div class="form-header">
                        <h1 class="text-center">@Model.Header</h1>
                    </div>
                    <div class="main-content">
                        <div class="text-danger">
                            <h2><span class="glyphicon glyphicon-remove-circle"></span>&nbsp;&nbsp;&nbsp;@Model.Title</h2>
                            <hr />
                            <p class="text-justify">
                                @foreach (ErrorMessageObj msg in Model.Items)
                                {
                                    @msg.Message<br>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        </section>
    </div>
        @{
            string js = string.Empty;

            if (Model.IsRedirecting)
            {
                js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "'; }, " +
                    Model.RedirectingTimeout + ");";
            }
        }
        <script>

    $(function () {
        @Html.Raw(js);
    });

        </script>
