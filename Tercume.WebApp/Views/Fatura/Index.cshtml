@model IEnumerable<Tercume.Entities.Fatura>
@{
    ViewBag.Title = "Tercümeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
     
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Translator.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Translator.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ToplamUcret)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TercumanUcret)
                </th>

                <th></th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Translator.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Translator.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToplamUcret)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TercumanUcret)
                </td>

                <td width="150">

                    @*@Bootstrap.LinkButton("/TercumeUser/Edit/" + item.Id, "warning", "btn-xs", "Düzenle", "edit", string.Empty)
                    @Bootstrap.LinkButton("/TercumeUser/Details/" + item.Id, "info", "btn-xs", "Detaylar", "search", string.Empty)
                    @Bootstrap.LinkButton("/TercumeUser/Delete/" + item.Id, "danger", "btn-xs", "Kaldır", "trash", string.Empty)*@
                </td>
            </tr>
            }
        </table>
    </div>
</div>