@using Tercume.WebApp
@model Tercume.Entities.Translate
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<link href="~/Content/login-register.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Tercüman Ara</h1>
                </div>
                <div class="main-content">
                   
                    <div class="input-group ">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                            @Html.TextBoxFor(model => model.KaynakDil, new { @class = "form-control", placeholder = "Kaynak dil" })
                        </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.HedefDil, new { @class = "form-control", placeholder = "Hedef dil", type = "text" })
                       
                    </div>
                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Giriş</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
}