@model Tercume.Entities.Tercuman

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutTercumanProfil.cshtml";
}


<div class="content-wrapper">
    <section class="content">
        <div class="row">
            @using (Html.BeginForm("EditProfileTercuman", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-horizontal">
                    <div class="col-md-3">
                        <img src="~/images/@Model.ProfileImageFilename" class="img-circle" width="128" height="128" />
                        @Html.HiddenFor(model => model.ProfileImageFilename)
                        <br /><br />
                        <input type="file" name="ProfileImage" id="ProfileImage" class="form-control" /><br />
                        <span class="glyphicon glyphicon-info-sign">&nbsp;</span>
                        <span><i>Lütfen jpg, jpeg ya da png formatı kullanın.</i></span>
                    </div>
                    <div class="col-md-5">
                        @Html.ValidationSummary(false)
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" value="Kaydet" class="btn btn-success" />
                                @Bootstrap.LinkButton("/Tercuman/DilEkle", "default", string.Empty, string.Empty, "plus", " Dil Ekle")
                                @Html.ActionLink("İptal", "ShowTercumanProfile", "Home", null, new { @class = "btn btn-default" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        &nbsp;
                    </div>
                </div>
            }
        </div>
        </section>
    </div>


